@model Product
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="row">
     <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Create Product form</h4>                    
                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                      <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span class="text-danger" asp-validation-for="Name"></span>
                      </div>
                       <div class="form-group">
                        <label asp-for="Price">Price</label>
                        <input asp-for="Price" class="form-control" placeholder="Price">
                        <span class="text-danger" asp-validation-for="Price"></span>
                      </div>
                      <div class="form-group">
                        <label asp-for="Count">Count</label>
                        <input asp-for="Count" class="form-control" placeholder="Count">
                        <span class="text-danger" asp-validation-for="Count"></span>
                      </div>
                      <label asp-for="Photo">Photo</label>
                      <select asp-for="CategoryId" class="form-select" asp-items="@ViewBag.Categories" aria-label="Default select example">
                        <option selected>Select Category</option>
                       
                      </select>

                       <div class="form-group">
                        <label asp-for="Photo">Photo</label>
                        <input asp-for="Photo" class="form-control">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                      </div>

                      <button type="submit" class="btn btn-primary mr-2">Submit</button> 
                      <a class="btn btn-dark" asp-action="index">go back</a>
                    </form>
                  </div>
                </div>
              </div>
</div>
@section scripts
{
    <partial name="_ValidationPartial"></partial>
}

