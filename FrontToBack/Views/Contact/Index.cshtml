@model List<Contact>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Contact Table</h4>                  
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>                            
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Subject</th>
                            <th>Message</th>
                          </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                               
                                <tr>                            
                             <td>@item.Name</td>
                             <td>@item.Phone</td>
                              <td>@item.Email</td>
                             <td>@item.Subject</td>
                             <td>@item.Message</td>

                             <td>                               
                                 <a class="btn btn-danger" asp-action="delete" asp-route-id="@item.Id">
                                     <i style="font-size:20px" class="mdi mdi-delete-forever"></i>
                                 </a>
                             </td>
                          </tr>
                           }
                          
                                                 
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
</div>

